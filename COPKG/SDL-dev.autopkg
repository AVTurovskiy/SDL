@import "version.inc";
@import "compat.inc";
@import "outercurve.inc";

#define { 
    flavor: "${comp??vc10}"; 
    arch : "${plat??x86}";
}

package {
    name: "SDL-dev[${flavor}]";
    version: "${package-version}";
    arch : "${arch}";

    display-name: "Simple DirectMedia Layer (SDL) Dev";
    location: "http://coapp.org/repository/${OutputFilename}";

    feed: "http://coapp.org/repository/packages.atom.xml";
    publisher: "CoApp Project";
}

license[LGPL21] {
	license: @"..\COPYING";
	license-url: "http://www.gnu.org/licenses/lgpl-2.1.html";
	license-type: "LGPL";
}

metadata {  
    summary: "Simple DirectMedia Library";
    description: @"Simple DirectMedia Layer is a cross-platform multimedia library designed to provide low level access to audio, keyboard, mouse, joystick, 3D hardware via OpenGL, and 2D video framebuffer.";
    author-version : "${package-version}";
    bug-tracker: "https://github.com/coapp-packages/SDL/issues";
    stability : "0";
    licenses : {
		LGPL21
    };
}

requires {
	package: "SDL[${flavor}]-${package-version}-${arch}-${Package.PublicKeyToken}";
	package: "SDL-dev-common-${package-version}-any-${Package.PublicKeyToken}";
}

files[libs] {
    root: @"..\VisualC10";

    include: {
        "Release\SDL.lib",
		"SDLmain\Release\SDLmain.lib",
    };

    trim-path: all;
};

developer-library[SDL[${flavor}]] {
    libraries : {
        libs,
    };
}

